-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
-- ///////////////////////////////////////////          recommended for the script             ///////////////////////////////////////////////
-- //////////////////////////        Change your ingame settings for left click to mouse wheel down        ///////////////////////////////////
-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

MouseMove = 3 -- Change this   // Recoil +/- 

-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

LC = 1 -- Change this   // 1 = Left Click, 2= Middle Mouse, 3= Right Click
RC = 3 -- Change this   // LC = Fire button, RC = Aim Button
 
-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

function NoRecoil()
repeat
Sleep(math.random(20, 36))           
MoveMouseRelative(0, MouseMove)      
until not IsMouseButtonPressed(RC)
end

-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

function RapidFire()
    repeat
          MoveMouseWheel(-1)
          Sleep(math.random(2, 8))
                 until not IsMouseButtonPressed(LC)
    end

-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
function Resetter()
    Countx = 0
end
 
-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////


                                        
                                             function OnEvent(event, arg)
                                         EnablePrimaryMouseButtonEvents(true);
         
         
         
-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////



        if IsMouseButtonPressed(LC) and IsMouseButtonPressed(RC) then
            if IsKeyLockOn("numlock") then
            Sleep(math.random(20, 35))
            MoveMouseRelative(0, 25)
                RapidFire()
                NoRecoil()
                Resetter()
            end
      else      
            while IsMouseButtonPressed(LC) do
                if IsKeyLockOn("numlock") then
                    RapidFire()
                    Resetter()
                end
            end
        end
    end   
    
    
    
  -- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
